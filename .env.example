# Environment Variables - SVYD LEDGER
# Copy this file to .env and fill with actual values
# DO NOT commit .env file to git

# ==================== AZURE CONFIGURATION ====================
AZURE_REGION=centralus
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=svydledger-data
AZURE_KEY_VAULT_URL=https://svydledger-kv.vault.azure.net/

# ==================== DATABASE ====================
# Azure SQL Hyperscale Connection String
DATABASE_URL=Server=tcp:svydserver.database.windows.net,1433;Database=svydledger-hyperescala;User ID=your-admin;Password=your-password;Encrypt=true;TrustServerCertificate=false;Connection Timeout=30;

# ==================== IDENTITY SERVICE ====================
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_EXPIRATION=3600
OAUTH2_ISSUER=https://api.svydledger.com

# ==================== STRIPE INTEGRATION ====================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ==================== API URLS ====================
IDENTITY_SERVICE_URL=http://localhost:8001
LANGUAGE_SERVICE_URL=http://localhost:8002
COUNTRY_SERVICE_URL=http://localhost:8003
ACCOUNTING_SERVICE_URL=http://localhost:8004
REPORTS_SERVICE_URL=http://localhost:8005
PAYMENTS_SERVICE_URL=http://localhost:8006

# ==================== FRONTEND ====================
VITE_API_URL=http://localhost:8080
VITE_APP_NAME=SVYD LEDGER
VITE_APP_REGION=centralus

# ==================== AZURE SERVICE BUS ====================
SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://svydledger-sb.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key

# ==================== AZURE STORAGE ====================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=svydledgerstore;AccountKey=your-key;EndpointSuffix=core.windows.net

# ==================== MONITORING ====================
APPLICATION_INSIGHTS_KEY=your-app-insights-key
LOG_LEVEL=info

# ==================== DEVELOPMENT ====================
NODE_ENV=development
DEBUG=true
ENABLE_SWAGGER=true
